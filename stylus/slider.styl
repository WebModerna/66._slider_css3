/* Mi propio slider hecho s√≥lo con CSS */

// Normalizando 
@import 'normalize'

$tiempo_mostrar = 3
$cantidad_segundos = 16
$items = $cantidad_segundos / $tiempo_mostrar

// El contenedor
.slider
	&__cuerpo
		box-sizing border-box
		margin 0
		text-align center
	
	&__contenedor
		box-sizing border-box
		margin 0
		position relative
	
	&__leyenda
		background rgba(5,5,5,0.5)
		border 1px solid pink
		color #fff
		font-size 20px
		font-style italic
		display inline-block
		line-height 40px
		// Posicionando la leyenda siempre en el centro
		position absolute
		top 50%
		left 50%
		width w = 150px
		height h = 40px
		margin-left -(w / 2)
		margin-top -(h / 2)
	
	&__item
		animation-delay 0
		animation-duration $cantidad_segundos s
		animation-iteration-count infinite
		animation-timing-function ease-in
		background-color #fff
		background-position 50% 50%
		background-repeat no-repeat
		background-size cover
		box-sizing border-box
		height 100vh
		left 0
		opacity 0
		position absolute
		top 0
		width 100vw

#slider__item
	&_1
		animation-name fadeing_1
		background-image url("../img/img1.jpg")

	&_2
		animation-name fadeing_2
		background-image url("../img/img2.jpg")

	&_3
		animation-name fadeing_3
		background-image url("../img/img3.jpg")

	&_4
		animation-name fadeing_4
		background-image url("../img/img4.jpg")

// Variables


$keyframe_nombre_1 = fadeing_1
$keyframe_nombre_2 = fadeing_2
$keyframe_nombre_3 = fadeing_3
$keyframe_nombre_4 = fadeing_4


// Los fotogramas
@keyframes {$keyframe_nombre_1}
	0%, 18.75%
		opacity 1
		
	25%, 93.75%
		opacity 0
	
	100%
		opacity 1

@keyframes {$keyframe_nombre_2}
	0%, 18.75%
		opacity 0
		
	25%, 43.75%
		opacity 1

	50%, 100%
		opacity 0

@keyframes {$keyframe_nombre_3}
	0%, 43.75%
		opacity 0
		
	50%, 68.75%
		opacity 1

	75%, 100%
		opacity 0

@keyframes {$keyframe_nombre_4}
	0%, 68.75%
		opacity 0
		
	75%, 93.75%
		opacity 1

	100%
		opacity 0